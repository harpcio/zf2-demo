<?xml version="1.0" encoding="UTF-8"?>

<phpunit bootstrap="Bootstrap.php">
    <testsuites>
        <testsuite name="Tests">
            <directory suffix="Test.php">../module/Application/test/ApplicationTest</directory>
            <directory suffix="Test.php">../module/Library/test/LibraryTest</directory>
            <directory suffix="Test.php">../module/Api/test/ApiTest</directory>
        </testsuite>
    </testsuites>

    <filter>
        <php>
            <ini name="memory_limit" value="2048M"/>
        </php>
        <whitelist>
            <directory suffix=".php">../module/Api</directory>
            <directory suffix=".php">../module/Application</directory>
            <directory suffix=".php">../module/Auth</directory>
            <directory suffix=".php">../module/Library</directory>
            <directory suffix=".php">../module/User</directory>
            <exclude>
                <directory suffix=".php">../module/Api/test</directory>
                <directory suffix=".php">../module/Application/test</directory>
                <directory suffix=".php">../module/Auth/test</directory>
                <directory suffix=".php">../module/Library/test</directory>
                <directory suffix=".php">../module/User/test</directory>
            </exclude>
        </whitelist>
    </filter>
</phpunit>